@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutSections)Model.Content;
}
<section class="w-full bg-white py-16">
    <div class="container mx-auto px-6 lg:px-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="flex justify-center">
                <img src="@(content.AboutSectionImage?.Url() ?? "~/images/Img.svg")"
                     alt="About Image"
                     class="rounded-lg shadow-md max-w-sm w-full object-cover" />
            </div>

            <div>
                <p class="text-gray-700 leading-relaxed mb-6">
                    @content.AboutSectionText
                </p>
            </div>
        </div>

        <div class="mt-24 grid grid-cols-1 bg-[#F7F7F7] lg:grid-cols-2 gap-3 items-center">
            <div class="ml-24">
                <p class="uppercase text-sm text-gray-400 font-semibold mb-2">
                    @content.AboutSectionTextTwo
                </p>
        
            </div>

            <div class="flex justify-center">
                <img src="@(content.AboutSectionImageTwo?.Url() ?? "~/images/Img.svg")"
                     alt="Client Image"
                     class="rounded-lg shadow-md max-w-sm w-full object-cover" />
            </div>
        </div>
    </div>
</section>
