@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HomeEmployeesImageSection)Model.Content;
}


<section class="bg-white py-20 text-center relative overflow-hidden">
    <div class="max-w-4xl mx-auto px-6">
        <p class="text-2xl sm:text-3xl font-semibold text-[#3B4A43] mb-2">
            @content.HomeEmployeesLabel
        </p>

        <p class="text-5xl sm:text-5xl font-bold mb-4">
            @content.HomeEmployeesTitle
        </p>

        <p class="text-gray-500 text-base sm:text-lg leading-relaxed mb-8">
           @content.HomeEmployeesText
        </p>

        <a href="@content.HomeEmployeesLink"
           class="inline-block bg-[#3B4A43] text-white font-medium px-6 py-3 rounded-md hover:bg-[#2F3A34] transition duration-300">
            Read our story
        </a>

        <div class="mt-12">
            <img src="@(content.HomeEmployeesImage?.Url() ?? "~/images/Img.svg")" />

        </div>

    </div>
</section>
