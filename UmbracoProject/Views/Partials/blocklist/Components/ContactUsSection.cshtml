@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ContactUsSection)Model.Content;
}

<section class="relative w-full">
  <div class="absolute inset-0">
    <img src="@content.ContactUsImage?.Url()" alt="Map" class="w-full h-full object-cover">
  </div>

  <div class="relative max-w-4xl mx-auto px-6 py-20">
    <div class="bg-white rounded-lg shadow-xl p-10 text-center">
      <p class="text-sm font-semibold text-yellow-600 uppercase tracking-wide mb-3">
        @content.ContactUsLabel
      </p>

      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
        @content.ContactUsTitle
      </h2>

      <p class="text-gray-500 max-w-2xl mx-auto mb-10">
        @content.ContactUsText
      </p>

      <form class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
        <input type="text" placeholder="Name" class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-gray-400">
        <input type="text" placeholder="Phone" class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-gray-400">
        <input type="email" placeholder="Email address" class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-gray-400 md:col-span-1">
        <select class="border border-gray-300 rounded-md p-3 bg-white focus:outline-none focus:ring-2 focus:ring-gray-400 md:col-span-1">
          <option>Financial consulting</option>
          <option>Business strategy</option>
          <option>Marketing support</option>
        </select>
        <div class="md:col-span-2 flex justify-center mt-4">
          <button type="submit" class="bg-gray-800 text-white font-medium px-8 py-3 rounded-md hover:bg-gray-900 transition">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
